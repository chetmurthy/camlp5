open Plexing ;;
let l = Plexer.gmake() ;;

let lex_string l s = 
  let strm,_ = l.tok_func (Stream.of_string s) in
  strm ;;

let list_of_stream strm =
let rec aux acc = 
let (ty, _ as p) = Stream.next strm in
if ty = "EOI" then List.rev acc
else aux (p::acc)
 in aux [] ;;

